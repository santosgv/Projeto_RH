@using Projeto_RH.Enums 
@model Projeto_RH.Entidades.Rh

@{
    ViewData["Title"] = "Editar formulario";
}

<h1>Editar</h1>

<h4>Requisicao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="N_Referencia_Pandape" class="control-label"></label>
                <input asp-for="N_Referencia_Pandape" class="form-control" />
                <span asp-validation-for="N_Referencia_Pandape" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vaga" class="control-label"></label>
                <select asp-for="Vaga" asp-items="Html.GetEnumSelectList<Vaga>()" class="form-control"></select>
                <span asp-validation-for="Vaga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email_Solicitante" class="control-label"></label>
                <input asp-for="Email_Solicitante" class="form-control" />
                <span asp-validation-for="Email_Solicitante" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnumFiliais" class="control-label"></label>
                <select asp-for="EnumFiliais" asp-items="Html.GetEnumSelectList<Filial>()" class="form-control"></select>
                <span asp-validation-for="EnumFiliais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Solicitação_Infra" class="control-label"></label>
                <select asp-for="Solicitação_Infra" asp-items="Html.GetEnumSelectList<Status>()" class="form-control"></select>
                <span asp-validation-for="Solicitação_Infra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Solicitação_Telefonia" class="control-label"></label>
                <select asp-for="Solicitação_Telefonia" asp-items="Html.GetEnumSelectList<Status>()" class="form-control"></select>
                <span asp-validation-for="Solicitação_Telefonia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo_Equipamento" class="control-label"></label>
                <select asp-for="Tipo_Equipamento" asp-items="Html.GetEnumSelectList<Equipamento>()" class="form-control"></select>
                <span asp-validation-for="Tipo_Equipamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cargo" class="control-label"></label>
                <input asp-for="Cargo" class="form-control" />
                <span asp-validation-for="Cargo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Setor" class="control-label"></label>
                <input asp-for="Setor" class="form-control" />
                <span asp-validation-for="Setor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Filial_infra" class="control-label"></label>
                <select asp-for="Filial_infra" asp-items="Html.GetEnumSelectList<Filial>()" class="form-control"></select>
                <span asp-validation-for="Filial_infra" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
