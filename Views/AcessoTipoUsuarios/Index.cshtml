@model IEnumerable<Projeto_RH.Models.AcessoTipoUsuario>

@{
    ViewData["Title"] = "Acessos";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Novo Acesso</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeFuncionalidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoUsuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeFuncionalidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoUsuario.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |

            </td>
        </tr>
}
    </tbody>
</table>
